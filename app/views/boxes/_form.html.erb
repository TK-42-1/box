<%= form_for(@box) do |f| %>
	<%= render 'shared/box_error_messages' %>

	<%= f.label :description %>
	<%= f.text_field :description %>
			
	<%= f.label :company_id, 'Company' %>
	<%= f.collection_select(:company_id, Company.all, :id, :name )%>
	
	<%= f.label  :department_id, 'Department'%>
	<%= f.collection_select(:department_id, Department.all, :id, :name )%>
	
	<%= f.label :month %>
	<%= f.select :month, [['January', 1], ['February', 2], ['March', 3], ['April', 4], ['May', 5], ['June', 6], ['July', 7], ['August', 8 ] , ['September', 9 ], ['October', 10], ['November', 11], ['December', 12]] %>
	
	<%= f.label :year %>
	<%= f.select :year, (Time.zone.now.year - 3)..(Time.zone.now.year + 1) %>
	
	<%= f.label :destroy_by %>
	<%= f.select :destroy_by, (Time.zone.now.year)..(Time.zone.now.year + 10) %>
	
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<br/>	
	<br/>	
	<%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>