<div class="row">
  <div class="span2">Box Number</div>
  <div class="span3 offset4 right-align">Destroy After</div>
</div>
<div class="row show">
  <div class="span2"><%= @box.id %></div>
  <div class="span3 offset4 right-align"><%= @box.destroy_by %></div>
</div>
<div class="row">
  <div class="span12">Company</div>
</div>
<div class="row show">
  <div class="span12"><%= @box.company.name %></div>
</div>
<div class="row">
  <div class="span12">Department</div>
</div>
<div class="row show">
  <div class="span12"><%= @box.department.name %></div>
</div>
<div class="row">
  <div class="span12">Date of Contents</div>
</div>
<div class="row show">
  <div class="span12"><%= @box.month %>/<%= @box.year %></div>
</div>
<div class="row">
  <div class="span12">Description</div>
</div>
<div class="row show">
  <div class="span12"><%= @box.description %></div>
</div>
<div class="row">
  <div class="span12">Stored by</div>
</div>
<div class="row show">
  <div class="span12"><%= @box.stored_by %></div>
</div>
<%  if @box.location_code.present? %>
<div class="row">
  <div class="span12">Location</div>
</div>
<div class="row show">
  <div class="span12"><%= @box.location_code %></div>
</div>
<div class="row">
  <div class="span2">Room</div>
  <div class="span2">Row</div>
  <div class="span2">Section</div>
  <div class="span2">Shelf</div>
  <div class="span2">Slot</div>
</div>
<div class="row show">
  <div class="span2"><%= @location.room %></div>
  <div class="span2"><%= @location.row %></div>
  <div class="span2"><%= @location.section %></div>
  <div class="span2"><%= @location.shelf %></div>
  <div class="span2"><%= @location.slot %></div>
</div>
<% end %>
<div class="row show">
  <br/>
  <div class="btn btn-primary span1"><%= link_to "EDIT", edit_box_path(@box) %></div>
  <% if current_user.admin? %>
    <div class="btn btn-danger span1 offeset1"><%= link_to "DELETE", @box, method: :delete, data: { confirm: "Confirm deletion"}%></div>
  <% end %>
</div>
