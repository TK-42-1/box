<%= simple_form_for @company, html: { class: 'form-horizontal' } do |f| %>
	<%= render 'shared/company_error_messages' %>
	
	<%= f.input :name, required: false %>
	<div class="offset2">
  <%= f.button :submit, class: "btn btn-primary" %> <%= link_to "Cancel", companies_path, class: "btn btn-danger" %>
  </div>
	
<% end %>