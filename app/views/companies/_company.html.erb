<tr>
  <td><%= link_to company.name, company %></td>
  <% if current_user.admin? %>
    <td><%= link_to "EDIT", edit_company_path(company), class: "btn btn-mini" %></td>
    <td><%= link_to "DELETE", company, method: :delete, data: { confirm: "Confirm deletion"}, class: "btn btn-mini btn-danger" %></td>
  <% else %>
    <td></td>
    <td></td>
  <% end %>
</tr>