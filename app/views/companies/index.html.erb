<% provide(:title, 'Companies')%>
<h1>Companies</h1>

<div class="center">
<% if current_user.admin? %>
  <%= link_to "Create company", new_company_path, class: "btn btn-medium btn-success" %>
  <br/>
  <br/>
  <% end %>

  <div class="input-append">
  <%= form_tag  companies_path, method: 'get'  do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <%= text_field_tag :search , params[:search], class: "input-xxlarge" %>
    <%= submit_tag "Search", name: nil, class: "btn" %>
  <% end %>
  </div>
</div>

<%= will_paginate @companies, previous_label: '&laquo;', next_label: '&raquo;', class: 'pagination pagination-centered' %>
  <table class="table table-hover">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th></th>
      <th></th>
     </tr>
  </thead>
    <tbody>
      <%= render @companies %>
    </tbody>
</table>

<%= will_paginate @companies , previous_label: '&laquo;', next_label: '&raquo;', class: 'pagination pagination-centered' %>