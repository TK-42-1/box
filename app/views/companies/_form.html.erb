<%= simple_form_for @company, html: { class: 'form-horizontal' } do |f| %>
	<%= render 'shared/company_error_messages' %>

	<%= f.input :name, required: false %>
	<%= f.association :departments, as: :check_boxes %>
  <div class="offset2">
	<%= f.button :submit, class: "btn btn-primary" %> <%= link_to "Delete", @company, method: :delete, data: { confirm: "Confirm deletion"}, class: "btn btn-danger" %>
	</div>
<% end %>