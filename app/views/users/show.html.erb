<% provide(:title, @user.name )%>
<div class="userpage">
  <h1><%= @user.name %></h1>
  <h2>
    <div class="row">
      <div class="span2">Username:</div>
      <div class="span 8"><%= @user.username %></div>
    </div>
    <div class="row">
      <div class="span2">Email:</div>
      <div class="span 8"><%= @user.email %></div>
    </div>
    <div class="row">
      <div class="span2">Role:</div>
      <div class="span 8">
        <% if @user.admin? %>
          Administrator
        <% else %>
          User 
        <% end %>
      </div>
    </div>
  </h2>
  <% if @current == @user %>
    <%= link_to "Change password", password_reset_user_path , class: "btn btn-primary reset" %>
  <% end %>
</div>
