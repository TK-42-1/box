<%= form_for(@user) do |f| %>
	<%= render 'shared/user_error_messages' %>

	<%= f.label :username %>
	<%= f.text_field :username %>
			
	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :email %>
	<%= f.text_field :email %>
	
	<%= f.label :admin, "Admin" %>
	<%= f.check_box :admin %>
	<br/>	
	<br/>	
	<%= f.submit "Save", class: "btn btn-primary" %>
	<%= link_to "Change password", password_reset_user_path , class: "btn btn-primary" %>
<% end %>