<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>

	<%= f.label :password %>
	<%= f.password_field :password %>
	
	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation %>
	
	<%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>