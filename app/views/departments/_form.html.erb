<%= simple_form_for @department, html: { class: 'form-horizontal' } do |f| %>
	<%= render 'shared/department_error_messages' %>

	<%= f.input :name, required: false %>
  <%= f.input :retain, placeholder: '# of years to retain' %>
  <%= f.input :indef, as: :boolean %>
  <%= f.association :companies, as: :check_boxes %>
	<div class="offset2">
  <%= f.button :submit, class: "btn btn-primary" %> <%= link_to "Delete", @department, method: :delete, data: { confirm: "Confirm deletion"}, class: "btn btn-danger" %>
  </div>
	
<% end %>