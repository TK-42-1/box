<%= simple_form_for @department, html: { class: 'form-horizontal' } do |f| %>
	<%= render 'shared/department_error_messages' %>

	<%= f.input :name, required: false %>
  <%= f.input :retain, placeholder: '# of years to retain' %>
  <%= f.input :indef, as: :boolean %>
  <div class="offset2">
  <%= f.button :submit, class: "btn btn-primary" %> <%= link_to "Cancel", departments_path, class: "btn btn-danger" %>
  </div>
<% end %>