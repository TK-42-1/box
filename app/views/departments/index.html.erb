<% provide(:title, 'Departments')%>
<h1>Departments</h1>

<div class="input-append">
<%= form_tag  departments_path, method: 'get'  do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <%= text_field_tag :search , params[:search], class: "input-xxlarge" %>
  <%= submit_tag "Search", name: nil, class: "btn" %>
<% end %>
</div>

<%= will_paginate @departments, previous_label: '&laquo;', next_label: '&raquo;', class: 'pagination pagination-centered' %>
  <table class="table table-hover">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "retain" %></th>
      <th>Edit</th>
      <th>Delete</th>
     </tr>
  </thead>
    <tbody>
      <%= render @departments %>
    </tbody>
</table>

<%= will_paginate @departments , previous_label: '&laquo;', next_label: '&raquo;', class: 'pagination pagination-centered' %>