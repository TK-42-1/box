<tr>
  <td><%= link_to department.name, department %></td>
  <td><%= link_to department.retain, department %></td>
  <% if current_user.admin? %>
    <td><%= link_to "EDIT", edit_department_path(department), class: "btn btn-mini" %></td>
    <td><%= link_to "DELETE", department, method: :delete, data: { confirm: "Confirm deletion"}, class: "btn btn-mini btn-danger" %></td>
  <% else %>
    <td></td>
    <td></td>
  <% end %>
</tr>