<% provide(:title, @department.name)%>
<h1><%= @department.name%></h1>
<div class="delete"><% if current_user.admin? %>
			<%= link_to "delete", @department, method: :delete, data: { confirm: "Confirm deletion"}%>
			<% end %></div>
<% if current_user.admin? %>
	<div class="row">
		<div class="span6 offset1">
			<%= render 'form' %>
		</div>
<% else%>
	<div class="row">
		<ul>
			<% @department.departments.each do |department| %>
				<li><%= department.name %></li>
			<% end %>
		</ul>
	<% end %>			
</div>