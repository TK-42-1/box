<% if @department.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			<% @department.errors.count %><%= pluralize(@department.errors.count, "error" )%>
		</div>
		<ul>
			<% @department.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>