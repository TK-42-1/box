<% if @location.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			<% @location.errors.count %><%= pluralize(@location.errors.count, "error" )%>
		</div>
		<ul>
			<% @location.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>